<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xam1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Image Source="ssps_4c_beran_s.png"  Aspect="AspectFill" HeightRequest="200"/>

        <Picker Title="Vyber Osloveni" Margin="20, 20, 20, 20" SelectedItem="{Binding Osloveni}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Pan</x:String>
                    <x:String>Pani</x:String>
                    <x:String>Ing.</x:String>
                    <x:String>Prof.</x:String>
                    <x:String>Jine</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Entry Placeholder="Jmeno" Margin="20,20,20,20" Text="{Binding Name}"/>
        <Button Text="Potvdit!" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
