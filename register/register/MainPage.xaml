<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="register.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Vitej, zadej zde sve jemno a heslo!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Image Source="man-fakes-death-cat-q6u_2z9w.png"  Aspect="AspectFill" HeightRequest="200"/>
        
        <Entry Placeholder="Jmeno" Margin="20,20,20,20" Text="{Binding Name}"/>
        <Entry Placeholder="Heslo" IsPassword="True" Margin="20,20,20,20" Text="{Binding Password}" x:Name="uPassword"/>
        <Button Text="Potvdit!" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
