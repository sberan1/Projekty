<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApiUkolv2.Views.ObrazkyPage">
    <StackLayout>
        <Frame BackgroundColor="#394a5a" CornerRadius="0">
            <Label HorizontalOptions="EndAndExpand" Text="A picture of the day" FontSize="20"/>
        </Frame>
        <ListView ItemsSource="{Binding ObrazkyList}" HasUnevenRows="True" ItemTapped="Item_Tapped_Handler">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Image Grid.RowSpan="2"
                           Source="{Binding HdUrl}"
                           Aspect="AspectFill"  
                           HeightRequest="250" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>